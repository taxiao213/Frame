<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hr.ui.view.TitleBarView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_color"
        app:titleText = "@string/mail_list"
        app:titleTextSize="18sp"
        app:titleColor="@color/white"
        app:leftBtnImage="@mipmap/btn_return"
        app:leftTextColor="@color/white"
        app:left_padding_left="12dp"
        app:rightBtnText="保存"
        app:rightBtnTextSize="18sp"
        app:rightTExtColor ="@color/white"
        app:right_padding_right = "12dp"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="101dip">
     <LinearLayout
         android:layout_width="0dip"
         android:layout_weight="1"
         android:orientation="vertical"
         android:layout_height="101dip">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="50dip">
      <TextView
          android:id="@+id/name_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="姓名："
          android:layout_marginLeft="5dp"
          android:textColor="@color/black_trans_10"
          android:layout_centerVertical="true"
          />
       <EditText
           android:id="@+id/name_ed_text"
           android:layout_toRightOf="@+id/name_text"
           android:background="@null"
           android:textSize="16sp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_centerVertical="true"
           />
      </RelativeLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="0.1dp"
             android:background="@color/black_trans_35"
             />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="50dip">
             <TextView
                 android:id="@+id/phone_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="电话："
                 android:layout_marginLeft="5dp"
                 android:textColor="@color/black_trans_10"
                 android:layout_centerVertical="true"
                 />
             <EditText
                 android:id="@+id/phone_ed_text"
                 android:layout_toRightOf="@+id/phone_text"
                 android:background="@null"
                 android:textSize="16sp"
                 android:digits="1234567890"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>

     </LinearLayout>
         <View
             android:layout_width="0.1dp"
             android:layout_height="match_parent"
             android:background="@color/black_trans_35"/>
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent">
         <ImageView
             android:id="@+id/go_address_book_image"
             android:layout_width="60dip"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_centerHorizontal="true"
             android:src="@mipmap/add_address_icon"
             />
         </RelativeLayout>
     </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black_trans_35"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">
     <TextView
         android:id="@+id/sfz_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/black_trans_10"
         android:text="身份证号："
         android:layout_marginLeft="5dp"
         android:layout_centerVertical="true"
         />
        <EditText
            android:id="@+id/sfz_ed_text"
            android:layout_toRightOf="@+id/sfz_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="1234567890"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black_trans_35"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                android:id="@+id/family_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_trans_10"
                android:text="家庭住址："
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/family_ed_text"
                android:layout_toRightOf="@+id/family_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="（非必选项）"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black_trans_35"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip">
    <Button
        android:id="@+id/reture_save_btn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/button_shape"
        android:textColor="@color/white_trans_10"
        android:layout_height="wrap_content"
        android:text="确定预约"
        />
    </RelativeLayout>
</LinearLayout>
